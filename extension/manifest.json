{
  "manifest_version": 2,
  "name": "Spotify Voice",
  "version": "1.1",
  "browser_action": {
    "default_icon": "temp-icon.png",
    "default_popup": "popup.html",
    "default_title": "Spotify Voice Control"
  },
  "short_name": "Voice Control, for Spotify web player",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "https://ajax.googleapis.com/",
    "storage",
  	"activeTab",
  	"tabs",
  	"https://www.youtube.com/*",
  	"https://play.spotify.com/*",
  	"contextMenus"
  ],
  "background": {
    "scripts": []
  }
}
