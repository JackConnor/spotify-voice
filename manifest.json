{
  "manifest_version": 2,
  "name": "Youtube Voice",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Youtube Voice"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "https://ajax.googleapis.com/",
    "storage",
  	"activeTab",
  	"tabs",
  	"https://www.youtube.com/*",
  	"contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
